{
    "compilerOptions": {
      "target": "es6",
      "lib": ["dom", "es2015"],
      "jsx": "react-jsx",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*"
    ]
  }